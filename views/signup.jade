extends layout

block content
  h1 Signup
  if message.length > 0
    div
      p= message

  form(action="/signup", method="POST")
    div
      label Email
      input(type="text", name="email")
    div
      label Password
      input(type="password", name="password")
    button(type="submit") Sign up!